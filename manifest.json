{
  "manifest_version": 2,
  "name": "Corser",
  "version": "0.0.5",
	"description": "Allows to manage cors restrictions",
	"author": "Mikhail Vyrtsev",
	"developer": {
		"name": "Mikhail Vyrtsev",
		"url": "https://vyrtsev.com"
	},
	"background":{
		"scripts": [
			"main.js"
		]
	},
	"permissions": [
		"storage",
		"webRequest",
		"webRequestBlocking",
    "<all_urls>"
	],
	"options_ui": {
		"browser_style": true,
		"page": "options.html"
	},
	"applications": {
		"gecko": {
			"id": "{a7984014-36a1-484d-b759-435643728580}",
			"strict_min_version": "54.0"
		}
	}
}